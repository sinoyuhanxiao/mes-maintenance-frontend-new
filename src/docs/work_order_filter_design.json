{
  "component": "TableFilterLayout",
  "structure": {
    "header": {
      "type": "filter-bar",
      "position": "top-of-table",
      "alignment": "column-aligned",
      "filters": [
        {
          "name": "Assigned To",
          "type": "dropdown"
        },
        {
          "name": "Due Date",
          "type": "dropdown"
        },
        {
          "name": "Work Type",
          "type": "dropdown"
        },
        {
          "name": "Priority",
          "type": "dropdown"
        }
      ],
      "customizationControl": {
        "type": "hamburger-menu",
        "position": "right most",
        "function": "to toggle filter visibility and order, add new filters, and save as presets"
      }
    }
  },
  "interactions": {
    "filter-dropdown": {
      "action": "open-dropdown",
      "behavior": "multi-select or single-select"
    },
    "hamburger-menu": {
      "action": "open-filter-settings",
      "behavior": "to show filter settings and presets"
    }
  }
}
