{
  "page": "Work Orders",
  "layout": {
    "type": "two-column",
    "header": {
      "title": "Work Orders",
      "actions": [
        {
          "type": "dropdown",
          "label": "View Mode",
          "options": ["To Do View", "Table View"],
          "default": "To Do View",
          "position": "right-of-title"
        },
        {
          "type": "button",
          "label": "+ New Work Order",
          "action": "openCreateModal",
          "style": "primary"
        }
      ]
    },
    "leftPanel": {
      "width": "30%",
      "components": [
        {
          "type": "filter-bar",
          "filters": ["Assigned To", "Due Date", "Location", "Priority", "Maintenance Type", "Add Filter"],
          "customFilter": {
            "type": "savedFilter",
            "label": "My Filters"
          }
        },
        {
          "type": "tabs",
          "options": ["To Do", "Done"],
          "default": "To Do",
          "behavior": {
            "onTabChange": "filterWorkOrdersByStatus"
          }
        },
        {
          "type": "work-order-list",
          "sortBy": "Priority: Highest First",
          "groupedBy": "Assigned To Me",
          "items": [
            {
              "id": "#23",
              "title": "邦工特调薯饼",
              "requestedBy": "Erik Yu",
              "status": "Open",
              "priority": "High",
              "dueStatus": "Overdue",
              "thumbnail": "image_url",
              "actions": ["Open Dropdown"],
              "badges": ["High Priority", "Overdue"]
            },
            {
              "id": "#19",
              "title": "Corrective Action: 1 failure and 5 flags on 'test'",
              "requestedBy": "Erik Yu",
              "status": "In Progress",
              "priority": "High",
              "dueStatus": "On Time",
              "thumbnail": "image_url",
              "actions": ["In Progress Dropdown"],
              "badges": ["High Priority"]
            },
            {
              "id": "#12",
              "title": "Corrective Action: 2 failures and 2 flags on 'Corrective'",
              "requestedBy": "Erik Yu",
              "status": "Open",
              "priority": "High",
              "dueStatus": "On Time",
              "thumbnail": "image_url"
            }
          ]
        }
      ]
    },
    "rightPanel": {
      "width": "70%",
      "components": [
        {
          "type": "work-order-detail",
          "fields": {
            "title": "Corrective Action: 1 failure and 5 flags on 'test'",
            "createdOn": "2024-05-01",
            "workOrderId": "#19",
            "statusOptions": ["Open", "On Hold", "In Progress", "Done"],
            "currentStatus": "In Progress",
            "priority": "High",
            "assignedTo": "Erik Yu",
            "description": [
              "There were 1 failure and 5 flags on Procedure 'test'.",
              "Original Work Order linked to Procedure '#test_inspection'."
            ],
            "attachments": ["Procedure Document"],
            "actions": ["Comments", "Edit", "Share Externally"]
          },
          "tracking": {
            "parts": "Add Part Usage",
            "time": "Add Time Log",
            "otherCosts": "Add Other Costs",
            "procedure": "View Procedure"
          }
        }
      ]
    }
  },
  "interactions": {
    "click": {
      "workOrderItem": "Load details to right panel",
      "dropdownViewSwitch": "Toggle between To Do View and Table View",
      "markAsDone": "Set work order status to Done",
      "editWorkOrder": "Open edit modal",
      "shareExternally": "Copy shareable link or invite"
    },
    "hover": {
      "workOrderItem": "Highlight background",
      "statusButtons": "Show tooltip for status meaning",
      "badges": "Show priority/overdue reason"
    },
    "responsive": {
      "smallScreen": {
        "breakpoint": "768px",
        "leftPanel": "collapsible",
        "viewSwitch": "placed in top-right corner"
      }
    },
    "statusChange": {
      "availableStatuses": ["Open", "On Hold", "In Progress", "Done"],
      "onStatusSelect": "updateWorkOrderStatus"
    },
    "tracking": {
      "addParts": "openPartsModal",
      "addTime": "openTimeModal",
      "addCosts": "openCostsModal",
      "viewProcedure": "navigateToProcedureDetail"
    }
  }
}
